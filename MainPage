    <script>
        window.onload = function () {
            const images = [
                'https://i.imgur.com/Mw8o0GP.png',   
                'https://i.imgur.com/cXCbe8A.png',
                'https://i.imgur.com/qSbixgS.png'    //array of images todo make work with darkreader plugin       
            ];

            let currentImageIndex = 0;
            const body = document.body;

            body.style.backgroundImage = `url(${images[0]})`;

            images.forEach((src) => {
                const img = new Image();
                img.src = src;
            });

            function changeBackgroundImage(index) {
                body.style.backgroundImage = `url(${images[index]})`;
            }

            function nextImage() {
                currentImageIndex = (currentImageIndex + 1) % images.length;
                changeBackgroundImage(currentImageIndex);
            }

            function prevImage() {
                currentImageIndex = (currentImageIndex - 1 + images.length) % images.length;
                changeBackgroundImage(currentImageIndex);
            }

            setInterval(nextImage, 15000);  //15000 ticks = 15 seconds (miliseconds clock) Note to future self: DONOT set intervals below 0.000X whoops

            document.querySelector('.right-arrow').onclick = nextImage;
            document.querySelector('.left-arrow').onclick = prevImage;

            changeBackgroundImage(currentImageIndex);
        }
    </script>
